-- Buat GUI utama
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "CoolUI"
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.ResetOnSpawn = false

-- Frame utama
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 300, 0, 180)
MainFrame.Position = UDim2.new(0.35, 0, 0.3, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(20,20,20)
MainFrame.Active = true
MainFrame.Draggable = true
MainFrame.Parent = ScreenGui

-- Rounded corner
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0,20)
UICorner.Parent = MainFrame

-- UIStroke Glow
local Stroke = Instance.new("UIStroke")
Stroke.Thickness = 2
Stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
Stroke.Color = Color3.fromRGB(255,255,255)
Stroke.Parent = MainFrame

-- Gradient background
local Gradient = Instance.new("UIGradient")
Gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(0,0,0)),
	ColorSequenceKeypoint.new(0.5, Color3.fromRGB(120,120,120)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(255,255,255))
}
Gradient.Rotation = 0
Gradient.Parent = MainFrame

-- Title
local Title = Instance.new("TextLabel")
Title.Parent = MainFrame
Title.Size = UDim2.new(1,0,0,50)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.GothamBold
Title.Text = "⚪ UI KEREN ⚫"
Title.TextSize = 26
Title.TextColor3 = Color3.fromRGB(255,255,255)

-- Efek shimmer pada title
local TitleStroke = Instance.new("UIStroke")
TitleStroke.Thickness = 1.5
TitleStroke.Color = Color3.fromRGB(200,200,200)
TitleStroke.Parent = Title

-- Animasi breathing (zoom in-out halus)
task.spawn(function()
	while true do
		game:GetService("TweenService"):Create(
			MainFrame, TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.Out),
			{Size = UDim2.new(0, 310, 0, 190)}
		):Play()
		wait(2)
		game:GetService("TweenService"):Create(
			MainFrame, TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.Out),
			{Size = UDim2.new(0, 300, 0, 180)}
		):Play()
		wait(2)
	end
end)

-- Animasi gradient muter
task.spawn(function()
	while true do
		for i = 0, 360, 1 do
			Gradient.Rotation = i
			wait(0.03)
		end
	end
end)
