-- Animasi untuk tombol saat di klik
local function buttonClickAnimation(button)
    local originalSize = button.Size
    local originalPos = button.Position
    button:TweenSize(UDim2.new(0, 210, 0, 45), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.1, true)
    button:TweenPosition(UDim2.new(0, 50, 0, button.Position.Y.Offset - 5), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.1, true)
    wait(0.1)
    button:TweenSize(originalSize, Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.1, true)
    button:TweenPosition(originalPos, Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.1, true)
end

FlyButton.MouseButton1Click:Connect(function()
    buttonClickAnimation(FlyButton)
    -- Fly Feature Code
    local player = game.Players.LocalPlayer
    local character = player.Character
    local humanoid = character:WaitForChild("Humanoid")
    local torso = character:WaitForChild("Torso")
    
    local bodyGyro = Instance.new("BodyGyro", torso)
    local bodyVelocity = Instance.new("BodyVelocity", torso)
    
    bodyGyro.MaxTorque = Vector3.new(400000, 400000, 400000)
    bodyGyro.CFrame = torso.CFrame
    bodyVelocity.MaxForce = Vector3.new(400000, 400000, 400000)
    
    bodyVelocity.Velocity = Vector3.new(0, 50, 0)  -- Fly up velocity

    -- To stop flying
    -- bodyGyro:Destroy()
    -- bodyVelocity:Destroy()
end)

InfiniteJumpButton.MouseButton1Click:Connect(function()
    buttonClickAnimation(InfiniteJumpButton)
    -- Infinite Jump Code
    local player = game.Players.LocalPlayer
    local humanoid = player.Character:WaitForChild("Humanoid")
    local jumpCount = 0

    humanoid.StateChanged:Connect(function(_, newState)
        if newState == Enum.HumanoidStateType.Freefall then
            if jumpCount < 1 then
                humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
                jumpCount = jumpCount + 1
            end
        elseif newState == Enum.HumanoidStateType.Landed then
            jumpCount = 0
        end
    end)
end)

SpectatorButton.MouseButton1Click:Connect(function()
    buttonClickAnimation(SpectatorButton)
    -- Spectator Mode Code
    local player = game.Players.LocalPlayer
    local camera = workspace.CurrentCamera
    
    camera.CameraSubject = nil
    camera.CameraType = Enum.CameraType.Scriptable
    camera.CFrame = CFrame.new(player.Character.HumanoidRootPart.Position + Vector3.new(0, 10, 0))
end)

AdminDetectButton.MouseButton1Click:Connect(function()
    buttonClickAnimation(AdminDetectButton)
    -- Admin Detection Code
    local Players = game:GetService("Players")
    local player = Players.LocalPlayer
    local adminKeywords = {"admin", "owner", "dev", "developer"}

    local function isAdmin(player)
        local title = player:FindFirstChild("Title")
        if title then
            for _, keyword in ipairs(adminKeywords) do
                if title.Value:lower():find(keyword) then
                    return true
                end
            end
        end
        return false
    end

    -- Show Admin Info
    for _, plr in pairs(Players:GetPlayers()) do
        if isAdmin(plr) then
            print(plr.Name .. " is an admin!")
        end
    end
end)

-- Menutup GUI
CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

